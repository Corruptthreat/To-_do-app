<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="15dp"
                >


                <TextView
                    android:textStyle="bold"
                    android:text="@string/app_name"
                    android:id="@+id/item_name_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/item_quantity_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_name_list"
                    android:paddingTop="4dp"
                    android:textSize="15sp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/item_brand_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_quantity_list"
                    android:textSize="15sp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/item_size_list"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_brand_list"
                    android:textSize="15sp" />

                <TextView
                    android:text="@string/app_name"
                    android:id="@+id/item_added_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/item_size_list"
                    android:textSize="15sp" />
                <TableRow
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal"
                    android:layout_alignBottom="@id/item_added_date"
                    android:layout_width="wrap_content"
                    android:layout_marginTop="15dp"
                    android:layout_height="wrap_content">

                <Button
                    android:id="@+id/editButton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginEnd="15dp"
                    android:background="@android:drawable/ic_menu_edit"
                    android:layout_marginRight="15dp" />
                    <Button
                        android:id="@+id/deleteButton"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:layout_marginEnd="15dp"
                        android:background="@android:drawable/ic_delete"
                        android:layout_marginRight="15dp" />

                </TableRow>

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </RelativeLayout>
</LinearLayout>